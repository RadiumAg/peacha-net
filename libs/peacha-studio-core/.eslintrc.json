{
	"extends": ["../../.eslintrc.json"],
	"ignorePatterns": ["!**/*"],
	"overrides": [
		{
			"files": ["*.ts"],
			"extends": ["plugin:@nrwl/nx/angular", "plugin:@angular-eslint/template/process-inline-templates"],
			"parserOptions": {
				"project": ["libs/peacha-studio/core/tsconfig.*?.json"]
			},
			"rules": {
				"@angular-eslint/directive-selector": ["error", { "type": "attribute", "prefix": "peacha", "style": "camelCase" }],
				"@angular-eslint/component-selector": ["error", { "type": "element", "prefix": "peacha", "style": "kebab-case" }]
			}
		},
		{
			"files": ["*.html"],
			"extends": ["plugin:@nrwl/nx/angular-template"],
			"rules": {}
		}
	]
}
